{
	"compilerOptions": {
			"target": "es6",
			"module": "commonjs",
			"outDir": "./dist",
			"declaration": true,
			"noImplicitAny": true,
			"removeComments": true,
			"jsx": "react",
			"strict": true,
			"esModuleInterop": true,
			"skipLibCheck": true,
			"forceConsistentCasingInFileNames": true,
			"rootDir": "./",
			"baseUrl": ".",
	},
	"include": ["src", "types", "examples"],
	"exclude": ["node_modules"]
}
